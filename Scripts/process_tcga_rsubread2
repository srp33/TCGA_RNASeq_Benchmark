#for cancerType in $(cat TCGA_CancerType_Publishable.txt)
#do
#  cgquery -o Query_${cancerType}.xml -a "state=live&library_strategy=RNA-Seq&filetype=fasta&sample_type=0*&study=phs000178&disease_abbr=${cancerType}"
